@model IEnumerable<StoreFront.DATA.EF.Models.Shipper>

@{
    ViewData["Title"] = "Shippers";
}

@* <h1>Index</h1> *@

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShipperName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipperVillage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.ShipperId">
                    @Html.DisplayFor(modelItem => item.ShipperName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipperVillage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ShipperId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ShipperId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
