@model StoreFront.DATA.EF.Models.Product

@{
    ViewData["Title"] = Model.ProductName + "Details";
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center">
    <div class="heading_container heading_center">
        <h2>
            @Model.ProductName <span>Details</span>
        </h2>
    </div>
</section>

<div>
    <div class="row mb-3">
        @* <h4>Product</h4>
        <hr /> *@
        <div class="col-md-6 text-center">
            <img src="~/img/@Model.ProductImage" alt="@Model.ProductName" longdesc="@Model.ProductDescription" class="img-fluid" />
            <p class="text-info mt-3">
                @Html.DisplayFor(model => model.ProductDescription)
            </p>
        </div>
        <div class="col-md-4 offset-md-1 align-middle">
            <p class="h3">
                <strong>@Html.DisplayNameFor(model => model.ProductPrice):</strong>
                @Html.DisplayFor(model => model.ProductPrice)
            </p>
            <p class="h3">
                <strong>@Html.DisplayNameFor(model => model.IsDiscontinued)</strong>
                @{
                    string isDiscontinued = Model.IsDiscontinued ? "Yes" : "No";
                }
                <span>@isDiscontinued</span>
            </p>
            <p class="h3">
                <strong>@Html.DisplayNameFor(model => model.ItemsInStock):</strong>
                @Html.DisplayFor(model => model.ItemsInStock)
            </p>
            <p class="h3">
                <strong>@Html.DisplayNameFor(model => model.Category.CategoryName):</strong>
                @Html.DisplayFor(model => model.Category.CategoryName)
            </p>
            @if (User.IsInRole("Admin"))
            {
                <p class="h3">
                    <strong>@Html.DisplayNameFor(model => model.Supplier.SupplierName):</strong>
                @Html.DisplayFor(model => model.Supplier.SupplierName)
            </p>
            }
        </div>

    </div>
</div>
        <div class="form-group p-4 text-center">
    @if (User.IsInRole("Admin")) 
        {
            <span><a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |</span>
        }
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
