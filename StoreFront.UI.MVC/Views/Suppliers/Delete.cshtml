@model StoreFront.DATA.EF.Models.Supplier

@{
    ViewData["Title"] = "Delete " + Model.SupplierName;
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center">
    <div class="heading_container heading_center">
        <h2>
            Delete <span>Supplier</span>
        </h2>
    </div>
</section>

<h3 class="alert alert-danger">Are you sure you want to delete @Model.SupplierName? This action cannot be undone!</h3>
<div class="row mb-3">

    <div class="col-md-6 offset-md-3 text-center align-middle">
        <p class="mt-3 ">
            Supplier:
            <br />
            @Html.DisplayFor(model => model.SupplierName)
        </p>
        <p class="mt-3">
            Village:
            <br />
            @Html.DisplayFor(model => model.SupplierVillage)
        </p>
    </div>
</div>


<div class="p-4 text-center">
    <form asp-action="Delete">
        <input type="hidden" asp-for="SupplierId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
