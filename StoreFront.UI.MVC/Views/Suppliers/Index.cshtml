@model IEnumerable<StoreFront.DATA.EF.Models.Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

@* <h1>Index</h1> *@

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center">
    <div class="heading_container heading_center">
        <h2>
            Our <span>Suppliers</span>
        </h2>
        <p align="center">
            <a asp-action="Create">Create New</a>
        </p>
    </div>
</section>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierVillage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.SupplierId">
                    @Html.DisplayFor(modelItem => item.SupplierName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierVillage)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SupplierId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.SupplierId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
