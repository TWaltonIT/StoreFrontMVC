@model StoreFront.DATA.EF.Models.Category

@{
    ViewData["Title"] = Model.CategoryName + " Details";
}

<section class="product_section gray-section layout_padding pb-4 pt-4 mb-4 text-center">
    <div class="heading_container heading_center">
        <h2>
            @Model.CategoryName Details
        </h2>
    </div>
</section>
<br />
<br />
<div>

    <dl class="row col-md-6 offset-md-4">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryDescription)
        </dd>
    </dl>
</div>
<br />
<br />
<br />
<br />
<div class="form-group p-4 text-center">
    @if (User.IsInRole("Admin"))
    {
        <span><input type="submit" value="Edit" class="btn btn-primary" /> |</span>
    }
    
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</div>
<br />
<br />
